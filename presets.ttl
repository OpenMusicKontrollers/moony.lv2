moony:bank-time_midi-sequencer
	state:state [
		moony:code """rolling = false
		
time_responder = TimeResponder:new({
	[Time.speed] = function(self, frames, forge, speed)
		rolling = speed > 0 and true or false
	end,
	[Time.barBeat] = function(self, frames, forge, bar_beat)
		if rolling then
			forge:time(frames):midi(0x80, 24, 0x7f)
			forge:time(frames):midi(0x90, 24, 0x7f)
		end
	end,
	[Time.bar] = function(self, frames, forge, bar)
		if rolling then
			forge:time(frames):midi(0x80, 48, 0x7f)
			forge:time(frames):midi(0x90, 48, 0x7f)
		end
	end
})

function run(n, seq, forge)
  local from = 0

  for frames, atom in seq:foreach() do
		time_responder(from, frames, forge, atom)
		from = frames
  end

	time_responder(from, n, forge)
end"""
	] .

moony:bank-osc_osc-responder
	state:state [
		moony:code """osc_responder = OSCResponder:new({
  root = {
    ping = function(self, frames, forge, fmt, ...)
      forge:time(frames):message('/pong', fmt, ...)
      return true -- handled
    end,
    pong = function(self, frames, forge, fmt, ...)
      forge:time(frames):message('/ping', fmt, ...)
      return true -- handled
    end
  }
})

function run(n, seq, forge)
  for frames, atom in seq:foreach() do
    local handled = osc_responder(frames, forge, atom)
  end
end"""
	] .

moony:bank-state_state-responder
	state:state [
		<http://open-music-kontrollers.ch/lv2/moony#code> """prefix = 'http://open-music-kontrollers.ch/lv2/moony#a1xa1'
urid = {
  alpha = Map[prefix .. '#alpha'],
  beta = Map[prefix .. '#beta'],
  gamma = Map[prefix .. '#gamm']
}

alpha = {
  label = 'Alpha',
  comment = 'This is Alpha',
  access = Patch.writable,
  range = Atom.Int,
  minimum = 0,
  maximum = 10,
	unit = Units.hz,
  value = 5
}

beta = {
  label = 'Beta',
  comment = 'This is Beta',
  access = Patch.readable,
  range = Atom.String,
  value = 'Moony rocks!'
}

gamma = {
  label = 'Gamma',
  comment = 'This is Gamma',
  access = Patch.writable,
  range = Atom.Double,
  minimum = 0.0,
  maximum = 2.0,
  unit = Units.mm,
  scale_points = {
    zero = 0.0,
		one = 1.0,
		two = 2.0
  },
	value = 1.0
}

state = StateResponder:new({
  [urid.alpha] = alpha,
  [urid.beta] = beta,
  [urid.gamma] = gamma
})

function save(store)
	state:save(store)
end

function restore(retrieve)
	state:restore(retrieve)
end

function default(n, seq, forge)
  for frames, atom in seq:foreach() do
    state(frames, forge, atom)
  end
end

function once(n, seq, forge)
  state:register(0, forge)
	run = default
	run(n, seq, forge)
end

run = once"""
